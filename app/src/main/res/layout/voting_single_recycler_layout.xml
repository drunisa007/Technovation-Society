<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="10dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/voting_imageview"
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:adjustViewBounds="true"
            android:background="#e1e4eb"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/cardviewlayout"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="7dp"
                    android:paddingRight="5dp"
                    android:paddingStart="7dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="2dp"
                    android:paddingEnd="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:paddingLeft="5dp"
                        android:paddingStart="5dp"
                        android:text="Name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.2"
                        android:text=":"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/voting_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Chaw Yadanar Aung "
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="7dp"
                    android:paddingRight="5dp"
                    android:paddingStart="7dp"
                    android:paddingBottom="2dp"
                    android:paddingEnd="5dp"
                   >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:paddingLeft="5dp"
                        android:paddingStart="5dp"
                        android:text="Height"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.2"
                        android:text=":"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="5 2 "
                        android:id="@+id/height"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="7dp"
                    android:paddingRight="5dp"
                    android:paddingStart="7dp"
                    android:paddingEnd="5dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:paddingLeft="5dp"
                        android:paddingStart="5dp"
                        android:text="No"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.2"
                        android:text=":"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/voting_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="20sp" />


                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/voting_cardview_votes"
                    android:layout_width="130dp"
                    android:layout_height="45dp"
                    app:cardCornerRadius="5dp"
                    android:layout_gravity="end"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    app:cardBackgroundColor="#03a9f4"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:id="@+id/voting_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Vote"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>




    </LinearLayout>







</android.support.v7.widget.CardView>


